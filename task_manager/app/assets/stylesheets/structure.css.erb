header {
  height: 1em;
  padding: 1em;
  margin-bottom: 1em;
	background: #0099CC;
  background-image: url('<%= image_path('gradient.png')%>');
}

header span {
  float: right;
}

header span .button_to {
	display: inline;
}

div#content {
  min-height: 400px;
}

footer {
  height: 1em;
  padding: 1em;
  margin-top: 1em;
	background: #0099CC;
  background-image: url('<%= image_path('gradient.png')%>');
}

#error-explanation {
  border: 1px solid red;
  color: red;
  font-weight: bold;
  padding: 1em;
  margin-bottom: 2em;
}
#error-explanation h2 {
  font-size: 1.25em;
  margin: 0;
}
